{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true
  },
  "include": ["src"]
}

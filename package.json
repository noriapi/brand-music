{
  "name": "brand-music",
  "version": "0.9.0",
  "description": "Strongly typed music theory library",
  "keywords": [
    "music",
    "theory",
    "music-theory",
    "branded-types"
  ],
  "homepage": "https://github.com/noriapi/brand-music#readme",
  "bugs": {
    "url": "https://github.com/noriapi/brand-music/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noriapi/brand-music.git"
  },
  "license": "MIT",
  "author": {
    "name": "noriapi"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./cjs/index.js",
  "types": "./cjs/index.d.ts",
  "files": [
    "esm",
    "cjs",
    "src",
    "!**/*.test.*",
    "!**/*.test-d.*"
  ],
  "scripts": {
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:cjs": "del-cli cjs && tsc -p tsconfig.cjs.json",
    "build:esm": "del-cli esm && tsc -p tsconfig.esm.json",
    "coverage": "vitest run --coverage",
    "fmt": "prettier --write src",
    "lint": "eslint src && prettier --check src",
    "lint:fix": "eslint --fix src",
    "test": "vitest",
    "typecheck": "vitest typecheck",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint",
    "src/**/*": "prettier --list-different --ignore-unknown"
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.0.9",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitest/coverage-v8": "^0.32.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "typescript": "^5.1.6",
    "vitest": "^0.32.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
